<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.com.com.Aproject.dao.ABoardDao">

    <!-- 결과 매핑 -->
    <resultMap id="AMemberResultMap" type="com.com.com.Aproject.dto.AMember">
        <result property="memberId" column="MEMBER_ID"/>
        <result property="memberName" column="MEMBER_NAME"/>
        <result property="memberPw" column="MEMBER_PW"/>
        <result property="memberRank" column="MEMBER_RANK"/>
    </resultMap>

    <select id="login" parameterType="java.lang.String" resultMap="AMemberResultMap">
        SELECT
            MEMBER_ID,
            MEMBER_NAME,
            MEMBER_PW,
            MEMBER_RANK
        FROM A_MEMBER
        WHERE MEMBER_ID = #{memberId}
    </select>
    
    <!-- idcheck -->
<select id="idCheck" parameterType="String" resultType="int">
    SELECT COUNT(*) FROM A_MEMBER WHERE member_id = #{memberId}
</select>
</mapper>
